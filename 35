#include "stdio.h"
#include "string.h"


int main()
{
    int i=14;
    void palin(int n);
    printf("请输入14个字符\40:\40");
    palin(i);
    printf("\n");
}
void palin(n)
int n;
{
    char next;
       if(n<=0) {
        return ;
    } else 
    {
        next=getchar();
       palin(n-1);
        putchar(next);
          
    }
}
